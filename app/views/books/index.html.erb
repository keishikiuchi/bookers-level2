<p>books メモ</p>

<div class="container">
	<div class="row">
		<div class="col-lg-4">


</div>

<div class="col-lg-8">
<h1>Books</h1>
<table class="table table-striped">
<thead>
	<tr>
		<th>Title</th>
		<th>Opinion</th>
		
	</tr>
</thead>

<tbody>
<% @books.each do |book| %>
	<tr>
		<td><%= link_to book.title, book_path(book.id) %></td>
		<td><%= book.body %></td>
	</tr>
<% end %>
</tbody>
</table>
</div>
</div>



<h1>New book</h1>
<%= form_for(@book) do |f| %>

	<h4>Title</h4>
	<%= f.text_field :title %>

	<h4>Opinion</h4>
	<%= f.text_area :body %>

	<p><%= f.submit 'Create book' %></p>
<% end %>
