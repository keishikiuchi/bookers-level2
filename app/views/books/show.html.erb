<p>本詳細</p>

<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<div class="container">
	<div class="row">
		<div class="col-lg-4">

			
			
			<h1>New book</h1>
			<%= form_for(@book) do |f| %>

			<h4>Title</h4>
			<%= f.text_field :title %>

			<h4>Opinion</h4>
			<%= f.text_area :body %>

			<p><%= f.submit 'Create book' %></p>
			<% end %>

		</div>

<div class="col-lg-8">
<h1>Book Detail</h1>
<table class="table table-striped">
	<tr>
		<th><%= @book.title %></th>
		<th><%= @book.body %></th>
		<th><%= link_to "edit", edit_book_path(@book) %></th>
		<th><%= link_to "destroy",book_path(@book.id), method: :delete,"data-confirm" => "Are you sure?" %></th>
	</tr>
</table>

</div>
</div>
</div>